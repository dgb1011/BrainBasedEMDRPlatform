# ========================================
# BRAINBASED EMDR PLATFORM - ENVIRONMENT
# ========================================

# Supabase (DB only)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Core App
JWT_SECRET=your-jwt-secret-key
APP_URL=http://localhost:5173
API_BASE_URL=http://localhost:5000

# Server
PORT=5000
NODE_ENV=development

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@yourdomain.com

# File Upload (optional)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Session (optional)
SESSION_SECRET=your-session-secret

# WebRTC / Video (recommended)
VIDEO_MAX_DURATION=7200
VIDEO_QUALITY=720p
TURN_SECRET=your-shared-turn-secret

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Certificates (in-house renderer)
# Optionally set defaults for branding; these can be overridden in the admin designer
CERT_DEFAULT_PRIMARY_COLOR=#2563eb
CERT_DEFAULT_ACCENT_COLOR=#7e22ce
CERT_DEFAULT_TEXT_COLOR=#1e293b
CERT_DEFAULT_BG_GRADIENT_START=#667eea
CERT_DEFAULT_BG_GRADIENT_END=#764ba2
CERT_SIGNED_URL_TTL=300

# WebRTC & Video Configuration (Production)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential
TURN_SERVER_URL_2=turn:backup-turn-server.com:3478
TURN_USERNAME_2=your-backup-username
TURN_CREDENTIAL_2=your-backup-credential

# Xirsys TURN Service (optional)
XIRSYS_TURN_URL=your-xirsys-server.com
XIRSYS_USERNAME=your-xirsys-username
XIRSYS_CREDENTIAL=your-xirsys-credential

# Security Configuration
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
SMS_SERVICE_SID=your-twilio-sid
SMS_AUTH_TOKEN=your-twilio-token
SMS_FROM_NUMBER=+1234567890